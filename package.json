{
  "name": "component-library-starter",
  "version": "1.0.0",
  "description": "A starter kit for building your own React component library",
  "main": "index.js",
  "module": "index.module.js",
  "files": [
    "dist",
    "index.module.js"
  ],
  "scripts": {
    "test": "sh test/unit-test.sh",
    "clean": "rm -rf dist",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "build-storybook": "build-storybook  -c .storybook -o .out",
    "prebuild": "npm run clean",
    "build:dev": "export NODE_ENV=development; rollup -c",
    "build:prod": "export NODE_ENV=production; rollup -c",
    "build": "npm run prebuild && npm run build:dev && npm run build:prod",
    "prepublishOnly": "npm test && npm run build"
  },
  "author": "Pat Jacobs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/musicbender/component-library-starter.git"
  },
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "react": "16.x",
    "react-dom": "16.x"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.4.10",
    "@storybook/react": "^3.4.10",
    "autoprefixer": "^9.1.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "classnames": "^2.2.6",
    "css-loader": "^0.28.11",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "mocha": "^5.2.0",
    "postcss": "^7.0.2",
    "postcss-camel-case": "^1.0.1",
    "postcss-hexrgba": "^1.0.1",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-mixins": "^6.2.0",
